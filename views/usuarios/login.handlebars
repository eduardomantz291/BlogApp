<h1 class="text-center">Faça Login:</h1>

<div class="card mt-3 mx-auto" style="width: 30rem;">
  <div class="card-header text-center">Formulário de login</div>
  <div class="card-body">
    {{#each erros}}
      <div class="alert alert-danger">{{texto}}</div>
    {{else}}
    {{/each}}
    <form action="/usuarios/registro" method="POST">
      <label for="email">Email:</label>
        <input type="email" class="form-control" name="email" placeholder="name@example.com">
      <div class="row mt-4">
        <div class="col">
          <label for="senha">Senha:</label>
            <input type="password" name="senha" class="form-control" placeholder="Senha">
        </div>
     </div>
      <button type="submit" class="btn btn-primary btn-lg btn-block mt-4">Logar</button>
    </form>
  </div>
</div>